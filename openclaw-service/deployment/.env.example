# Environment variables for OpenClaw-as-a-Service
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED
# ============================================

# Database (PostgreSQL)
DB_PASSWORD=your-secure-db-password
DATABASE_URL=postgresql://openclaw:${DB_PASSWORD}@postgres:5432/openclaw

# Redis
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Security (generate with: openssl rand -base64 48)
JWT_SECRET=your-jwt-secret-min-32-chars-long
API_KEY_SECRET=your-api-key-secret
ENCRYPTION_KEY=your-encryption-key-32-bytes

# ============================================
# ORGO VM ORCHESTRATION
# ============================================

ORGO_API_KEY=sk_live_your_orgo_api_key
ORGO_WORKSPACE_ID=your-orgo-workspace-id

# ============================================
# BOT INTEGRATIONS
# ============================================

# Telegram (optional - can be set per tenant)
# TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# WhatsApp (optional - can be set per tenant)
# WHATSAPP_WEBHOOK_SECRET=your-webhook-secret

# ============================================
# PAYMENTS
# ============================================

# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key

# ============================================
# MONITORING (optional)
# ============================================

# Sentry
SENTRY_DSN=https://your-sentry-dsn

# Log level
LOG_LEVEL=INFO

# ============================================
# DEPLOYMENT
# ============================================

# Environment
ENV=production

# Port
PORT=8000

# Workers
WORKERS=4

# CORS
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Hosts
ALLOWED_HOSTS=api.yourdomain.com,app.yourdomain.com
